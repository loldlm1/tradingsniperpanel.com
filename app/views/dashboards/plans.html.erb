<% content_for :title, "#{t('dashboard.nav.plans')} | #{t('app.short_name')}" %>

<% pricing = @pricing_catalog || {} %>
<% plan = @plan_context || {} %>
<% current_tier = plan[:current_tier] %>
<% visible_tiers = plan[:visible_tiers] || %i[basic hft pro] %>
<% discount_percent = pricing.dig(:annual, :discount_percent) %>
<% subscribed = @subscription.present? %>
<% scheduled_change = plan[:scheduled_change] || {} %>
<% scheduled_price_key = scheduled_change[:price_key] %>
<% requested_price_key = @requested_price_key.to_s.presence %>
<% requested_tier = requested_price_key&.split("_")&.first&.to_sym %>
<% requested_interval = requested_price_key&.split("_")&.last %>
<% plan_states = plan[:states] || {} %>

<% plan_name = current_tier ? t("dashboard.plans.tiers.#{current_tier}.name", default: current_tier.to_s.humanize) : nil %>
<% interval_key = plan[:current_interval] == "annual" ? "annually" : plan[:current_interval] %>
<% interval_label = interval_key.present? ? t("dashboard.plans.toggle.#{interval_key}", default: interval_key.to_s.humanize) : nil %>
<% summary_text = if plan_name.present? && interval_label.present?
                    t("dashboard.plans.summary", plan_name: plan_name, interval: interval_label)
                  else
                    t("dashboard.plans.no_plan_summary")
                  end %>
<% scheduled_label = if scheduled_change[:tier].present?
                       scheduled_plan_name = t("dashboard.plans.tiers.#{scheduled_change[:tier]}.name", default: scheduled_change[:tier].to_s.humanize)
                       scheduled_interval_key = scheduled_change[:interval].to_s == "annual" ? "annually" : scheduled_change[:interval]
                       scheduled_interval_label = scheduled_interval_key.present? ? t("dashboard.plans.toggle.#{scheduled_interval_key}", default: scheduled_interval_key.to_s.humanize) : nil
                       if scheduled_interval_label.present?
                         t("dashboard.plan_card.plan_label", tier: scheduled_plan_name, interval: scheduled_interval_label)
                       else
                         t("dashboard.plan_card.plan_label_tier_only", tier: scheduled_plan_name)
                       end
                     end %>

<% tier_configs = {
  basic: { accent: "bg-green-500", name: t("dashboard.plans.tiers.basic.name") },
  hft: { accent: "bg-sky-500", name: t("dashboard.plans.tiers.hft.name") },
  pro: { accent: "bg-violet-500", name: t("dashboard.plans.tiers.pro.name") }
} %>

<div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl mb-8">
  <div class="p-6 space-y-6">
    <section>
      <div class="mb-8">
        <h2 class="text-2xl text-gray-800 dark:text-gray-100 font-bold mb-4"><%= t("dashboard.plans.page_title") %></h2>
        <div class="text-sm"><%= summary_text %></div>
        <% if scheduled_label.present? && scheduled_change[:effective_at].present? %>
          <div class="text-sm text-amber-600 dark:text-amber-300 mt-2">
            <%= t("dashboard.plans.scheduled_notice", plan: scheduled_label, date: l(scheduled_change[:effective_at].to_date)) %>
          </div>
        <% end %>
      </div>

      <div x-data="{ annual: <%= requested_interval == 'annual' ? 'true' : 'false' %> }">
        <div class="flex items-center space-x-3 mb-6">
          <div class="text-sm text-gray-500 font-medium"><%= t("dashboard.plans.toggle.monthly") %></div>
          <div class="form-switch">
            <input type="checkbox" id="toggle" class="sr-only" x-model="annual" />
            <label for="toggle">
              <span class="bg-white shadow-xs" aria-hidden="true"></span>
              <span class="sr-only"><%= t("dashboard.plans.toggle.pay_annually") %></span>
            </label>
          </div>
          <div class="text-sm text-gray-500 font-medium">
            <%= t("dashboard.plans.toggle.annually") %>
            <% if discount_percent.present? %>
              <span class="text-green-500"><%= t("dashboard.plans.toggle.save_up_to", percent: discount_percent) %></span>
            <% end %>
          </div>
        </div>

        <div class="grid grid-cols-12 gap-6">
          <% visible_tiers.each do |tier| %>
            <% config = tier_configs.fetch(tier) %>
            <% requested_for_card = requested_tier == tier %>
            <% monthly_key = "#{tier}_monthly" %>
            <% annual_key = "#{tier}_annual" %>
            <% monthly_available = Billing::ConfiguredPrices.price_id_for(monthly_key).present? %>
            <% annual_available = Billing::ConfiguredPrices.price_id_for(annual_key).present? %>
            <% features = t("dashboard.plans.tiers.#{tier}.features", default: []) %>
            <% monthly_state = plan_states.dig(tier, :monthly) %>
            <% annual_state = plan_states.dig(tier, :annual) %>
            <% scheduled_for_tier = scheduled_change[:tier] == tier %>
            <% scheduled_monthly = scheduled_price_key == monthly_key %>
            <% scheduled_annual = scheduled_price_key == annual_key %>

            <div class="relative col-span-full xl:col-span-4 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700/60 shadow-xs rounded-b-lg">
              <div class="absolute top-0 left-0 right-0 h-0.5 <%= config[:accent] %>" aria-hidden="true"></div>
              <div class="px-5 pt-5 pb-6 border-b border-gray-200 dark:border-gray-700/60">
                <header class="flex items-center mb-2">
                  <div class="w-6 h-6 rounded-full shrink-0 <%= config[:accent] %> mr-3">
                    <svg class="w-6 h-6 fill-current text-white" viewBox="0 0 24 24">
                      <path d="M12 17a.833.833 0 01-.833-.833 3.333 3.333 0 00-3.334-3.334.833.833 0 110-1.666 3.333 3.333 0 003.334-3.334.833.833 0 111.666 0 3.333 3.333 0 003.334 3.334.833.833 0 110 1.666 3.333 3.333 0 00-3.334 3.334c0 .46-.373.833-.833.833z" />
                    </svg>
                  </div>
                  <h3 class="text-lg text-gray-800 dark:text-gray-100 font-semibold"><%= config[:name] %></h3>
                  <% if requested_for_card %>
                    <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold text-violet-600 dark:text-violet-300 bg-violet-500/10"><%= t("dashboard.plans.requested_plan") %></span>
                  <% elsif scheduled_for_tier %>
                    <span class="ml-auto inline-flex items-center px-2 py-0.5 rounded-full text-xs font-semibold text-amber-700 dark:text-amber-300 bg-amber-500/10"><%= t("dashboard.plans.scheduled_badge") %></span>
                  <% end %>
                </header>
                <div class="text-sm mb-2"><%= t("dashboard.plans.tiers.#{tier}.description") %></div>
                <div class="text-gray-800 dark:text-gray-100 font-bold mb-4">
                  <span class="text-2xl">$</span>
                  <span class="text-3xl" x-show="!annual" x-cloak><%= pricing.dig(:monthly, tier, :display) || t("dashboard.plans.placeholder") %></span>
                  <span class="text-3xl" x-show="annual" x-cloak><%= pricing.dig(:annual, tier, :effective_monthly_display) || t("dashboard.plans.placeholder") %></span>
                  <span class="text-gray-500 font-medium text-sm">/mo</span>
                </div>

                <% cta_label = subscribed ? t("dashboard.plans.cta.upgrade") : t("dashboard.plans.cta.subscribe") %>
                <div x-show="!annual" x-cloak>
                  <% if monthly_available %>
                    <% if subscribed && monthly_state == :current %>
                      <button class="btn w-full bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white disabled:border-gray-200 dark:disabled:border-gray-700 disabled:bg-white dark:disabled:bg-gray-800 disabled:text-gray-300 dark:disabled:text-gray-600 disabled:cursor-not-allowed" disabled>
                        <svg class="w-3 h-3 shrink-0 fill-current mr-2" viewBox="0 0 12 12">
                          <path d="M10.28 1.28L3.989 7.575 1.695 5.28A1 1 0 00.28 6.695l3 3a1 1 0 001.414 0l7-7A1 1 0 0010.28 1.28z" />
                        </svg>
                        <span><%= t("dashboard.plans.cta.current") %></span>
                      </button>
                    <% elsif subscribed && scheduled_monthly %>
                      <button class="btn w-full border-gray-200 dark:border-gray-700/60 text-gray-800 dark:text-gray-300 disabled:cursor-not-allowed" disabled>
                        <%= t("dashboard.plans.cta.scheduled") %>
                      </button>
                    <% else %>
                      <% monthly_label = if subscribed && monthly_state == :downgrade
                                           t("dashboard.plans.cta.downgrade")
                                         else
                                           cta_label
                                         end %>
                      <%= button_to dashboard_checkout_path(price_key: monthly_key), method: :post, class: "btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white w-full", data: { loading_target: true } do %>
                        <%= loading_label(monthly_label, loading_text: t("loading.default")) %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <button class="btn w-full border-gray-200 dark:border-gray-700/60 hover:border-gray-300 dark:hover:border-gray-600 text-gray-800 dark:text-gray-300" disabled><%= t("dashboard.plans.cta.unavailable") %></button>
                  <% end %>
                </div>
                <div x-show="annual" x-cloak>
                  <% if annual_available %>
                    <% if subscribed && annual_state == :current %>
                      <button class="btn w-full bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white disabled:border-gray-200 dark:disabled:border-gray-700 disabled:bg-white dark:disabled:bg-gray-800 disabled:text-gray-300 dark:disabled:text-gray-600 disabled:cursor-not-allowed" disabled>
                        <svg class="w-3 h-3 shrink-0 fill-current mr-2" viewBox="0 0 12 12">
                          <path d="M10.28 1.28L3.989 7.575 1.695 5.28A1 1 0 00.28 6.695l3 3a1 1 0 001.414 0l7-7A1 1 0 0010.28 1.28z" />
                        </svg>
                        <span><%= t("dashboard.plans.cta.current") %></span>
                      </button>
                    <% elsif subscribed && scheduled_annual %>
                      <button class="btn w-full border-gray-200 dark:border-gray-700/60 text-gray-800 dark:text-gray-300 disabled:cursor-not-allowed" disabled>
                        <%= t("dashboard.plans.cta.scheduled") %>
                      </button>
                    <% else %>
                      <% annual_label = if subscribed && annual_state == :downgrade
                                          t("dashboard.plans.cta.downgrade")
                                        else
                                          cta_label
                                        end %>
                      <%= button_to dashboard_checkout_path(price_key: annual_key), method: :post, class: "btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white w-full", data: { loading_target: true } do %>
                        <%= loading_label(annual_label, loading_text: t("loading.default")) %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <button class="btn w-full border-gray-200 dark:border-gray-700/60 hover:border-gray-300 dark:hover:border-gray-600 text-gray-800 dark:text-gray-300" disabled><%= t("dashboard.plans.cta.unavailable") %></button>
                  <% end %>
                </div>
              </div>
              <div class="px-5 pt-4 pb-5">
                <div class="text-xs text-gray-800 dark:text-gray-100 font-semibold uppercase mb-4"><%= t("dashboard.plans.whats_included") %></div>
                <ul>
                  <% Array(features).each do |feature| %>
                    <li class="flex items-center py-1">
                      <svg class="w-3 h-3 shrink-0 fill-current text-green-500 mr-2" viewBox="0 0 12 12">
                        <path d="M10.28 1.28L3.989 7.575 1.695 5.28A1 1 0 00.28 6.695l3 3a1 1 0 001.414 0l7-7A1 1 0 0010.28 1.28z" />
                      </svg>
                      <div class="text-sm"><%= feature %></div>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <section>
      <div class="px-5 py-3 bg-linear-to-r from-violet-500/[0.12] dark:from-violet-500/[0.24] to-violet-500/[0.04] rounded-lg text-center xl:text-left xl:flex xl:flex-wrap xl:justify-between xl:items-center">
        <div class="mb-3 xl:mb-0">
          <div class="text-gray-800 dark:text-gray-100 font-semibold"><%= t("dashboard.plans.contact.title") %></div>
          <div class="text-sm text-gray-600 dark:text-gray-300"><%= t("dashboard.plans.contact.body") %></div>
        </div>
        <%= link_to t("dashboard.plans.contact.cta"), dashboard_support_path, class: "btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white" %>
      </div>
    </section>

    <section>
      <div class="my-8">
        <h2 class="text-2xl text-gray-800 dark:text-gray-100 font-bold"><%= t("dashboard.plans.faq.title") %></h2>
      </div>
      <ul class="space-y-5">
        <% t("dashboard.plans.faq.items", default: []).each do |item| %>
          <li>
            <div class="font-semibold text-gray-800 dark:text-gray-100 mb-1"><%= item[:q] %></div>
            <div class="text-sm"><%= item[:a] %></div>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
</div>
