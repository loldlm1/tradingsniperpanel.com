<% content_for :title, "#{t('dashboard.nav.pricing', default: 'Pricing')} | #{t('app.short_name')}" %>

<div class="mb-8">
  <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold"><%= t("dashboard.nav.pricing", default: "Pricing") %></h1>
  <p class="text-gray-600 dark:text-gray-300"><%= t("pricing.subtitle") %></p>
</div>

<div class="grid gap-6 lg:grid-cols-3">
  <% plans = [
    { name: "Basic", price: "$39/mo", features: ["Core EA access", "Manuals & docs", "Email support"] },
    { name: "HFT", price: "$79/mo", features: ["HFT EA access", "Priority updates", "Email + chat support"] },
    { name: "Pro", price: "$129/mo", features: ["All EAs", "Priority fixes", "1:1 onboarding"] }
  ] %>
  <% plans.each do |plan| %>
    <div class="bg-white dark:bg-gray-800 shadow-sm rounded-xl border border-gray-200 dark:border-gray-700 p-5 flex flex-col">
      <div class="flex items-center justify-between mb-4">
        <div>
          <div class="text-sm text-gray-500 dark:text-gray-400 uppercase font-semibold"><%= plan[:name] %></div>
          <div class="text-2xl font-semibold text-gray-800 dark:text-gray-100"><%= plan[:price] %></div>
        </div>
      </div>
      <ul class="text-sm text-gray-600 dark:text-gray-300 space-y-2 flex-1">
        <% plan[:features].each do |feature| %>
          <li class="flex items-start gap-2">
            <svg class="w-4 h-4 text-emerald-500 mt-1" viewBox="0 0 12 12">
              <path d="M10.28 1.28 3.989 7.575 1.695 5.28A1 1 0 00.28 6.695l3 3a1 1 0 001.414 0l7-7A1 1 0 0010.28 1.28z" />
            </svg>
            <span><%= feature %></span>
          </li>
        <% end %>
      </ul>
      <div class="mt-4">
        <%= link_to t("dashboard.plan_card.subscribe"), dashboard_billing_path, class: "btn-sm bg-violet-600 hover:bg-violet-700 text-white w-full text-center" %>
      </div>
    </div>
  <% end %>
</div>
