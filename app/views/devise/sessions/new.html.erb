<% content_for :title, "#{t('devise.sign_in_title')} | #{t('app.name')}" %>

<section class="relative max-w-lg mx-auto px-4 sm:px-6 pt-32 pb-12 md:pt-36 md:pb-16">
  <div class="bg-gray-800/60 border border-gray-800 rounded-2xl p-8 shadow-xl">
    <h1 class="text-2xl font-semibold text-gray-100 mb-6"><%= t("devise.sign_in_title") %></h1>

    <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input w-full text-gray-100 bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <div class="flex items-center justify-between mb-2">
          <%= f.label :password, class: "block text-sm font-medium text-gray-300" %>
          <%= link_to t("devise.forgot_password"), new_password_path(resource_name), class: "text-xs text-blue-400 hover:text-blue-300" %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input w-full text-gray-100 bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 text-sm text-gray-300">
          <%= f.check_box :remember_me, class: "form-checkbox text-blue-500 bg-gray-900 border-gray-700 rounded" %>
          <%= f.label :remember_me, class: "select-none" %>
        </div>
      <% end %>

      <%= f.submit t("devise.sign_in_title"), class: "btn text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 w-full shadow-lg" %>
    <% end %>

    <div class="mt-6 text-sm text-gray-400">
      <span><%= t("devise.no_account") %></span>
      <%= link_to t("nav.sign_up"), new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-300 ml-2" %>
    </div>
  </div>
</section>
