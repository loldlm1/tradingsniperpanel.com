<% accounts = Array(broker_accounts).presence %>
<div class="mt-3">
  <div class="text-xs font-semibold text-gray-700 dark:text-gray-200 mb-2"><%= t("dashboard.broker_accounts.title") %></div>
  <% if accounts.present? %>
    <div class="space-y-2">
      <% accounts.each do |account| %>
        <div class="flex items-center justify-between bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg px-3 py-2">
          <div>
            <div class="text-sm font-semibold text-gray-800 dark:text-gray-100"><%= account.name.presence || t("dashboard.broker_accounts.unnamed") %></div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= account.company %> Â· <%= account.account_number %></div>
          </div>
          <span class="px-2 py-1 rounded-full text-xs font-semibold bg-gray-100 dark:bg-gray-700/60 text-gray-700 dark:text-gray-200">
            <%= t("dashboard.broker_accounts.account_type.#{account.account_type}") %>
          </span>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-xs text-gray-500 dark:text-gray-400"><%= t("dashboard.broker_accounts.none") %></div>
  <% end %>
</div>
