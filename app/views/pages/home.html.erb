<% content_for :title, t("app.name") %>

<section class="relative overflow-hidden">
  <div class="absolute bottom-0 left-0 right-0 bg-linear-to-t from-gray-800 to-gray-900 opacity-60 h-[10rem] pointer-events-none -z-10" aria-hidden="true"></div>
  <div class="absolute left-1/2 -translate-x-1/2 pointer-events-none -z-10" aria-hidden="true">
    <%= image_tag "neon/images/hero-illustration.svg", class: "max-w-none", width: 2143, height: 737, alt: "Hero Illustration" %>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
      <div class="max-w-xl mx-auto md:max-w-[640px] md:mx-0 text-center md:text-left">
        <div data-aos="zoom-out">
          <div class="relative text-sm text-gray-300 bg-gray-800 rounded-full inline-block px-4 py-1 mb-6 before:content-[''] before:absolute before:-z-10 before:inset-0 before:-m-0.5 before:bg-linear-to-t before:from-gray-800 before:to-gray-800 before:via-gray-600 before:rounded-full">
            <div class="text-gray-400"><%= t("hero.badge") %></div>
          </div>
        </div>
        <h1 class="h1 font-uncut-sans mb-6" data-aos="zoom-out" data-aos-delay="100"><%= t("hero.title") %></h1>
        <p class="text-xl text-gray-400 mb-10" data-aos="zoom-out" data-aos-delay="200"><%= t("hero.subtitle") %></p>
        <div class="max-w-xs mx-auto sm:max-w-none sm:flex sm:justify-center md:justify-start space-y-4 sm:space-y-0 sm:space-x-4" data-aos="zoom-out" data-aos-delay="300">
          <div>
            <%= link_to(user_signed_in? ? dashboard_path : new_user_registration_path, class: "btn text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 w-full shadow-lg group") do %>
              <%= t("hero.primary_cta") %>
              <span class="tracking-normal text-blue-200 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out ml-1">-&gt;</span>
            <% end %>
          </div>
          <div>
            <%= link_to t("hero.secondary_cta"), docs_path, class: "btn text-gray-300 bg-linear-to-t from-gray-800 to-gray-700 hover:to-gray-800 w-full shadow-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-16 border-b border-gray-800">
      <div class="max-w-3xl mx-auto text-center pb-12">
        <h2 class="h2 font-uncut-sans mb-4"><%= t("features.title") %></h2>
        <p class="text-lg text-gray-400"><%= t("app.tagline") %></p>
      </div>
      <div class="grid gap-6 md:grid-cols-2">
        <% feature_items = [:risk, :scope, :grid, :theme] %>
        <% feature_items.each_with_index do |item, index| %>
          <div class="relative bg-gray-800/50 border border-gray-800 rounded-2xl p-6" data-aos="fade-up" data-aos-delay="<%= (index + 1) * 50 %>">
            <div class="w-12 h-12 rounded-xl bg-gray-900 flex items-center justify-center mb-4 text-blue-400 font-semibold">
              0<%= index + 1 %>
            </div>
            <h3 class="text-lg font-semibold text-gray-100 mb-2"><%= t("features.items.#{item}.title") %></h3>
            <p class="text-gray-400"><%= t("features.items.#{item}.body") %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-16">
      <div class="max-w-3xl mx-auto text-center pb-12">
        <h2 class="h2 font-uncut-sans mb-4"><%= t("workflow.title") %></h2>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        <% workflow_steps = [:projection, :signal, :scope] %>
        <% workflow_steps.each_with_index do |step, index| %>
          <div class="relative bg-linear-to-t from-gray-800/80 to-gray-800 rounded-2xl border border-gray-800 p-6" data-aos="fade-up" data-aos-delay="<%= (index + 1) * 75 %>">
            <div class="text-sm text-blue-300 mb-3">0<%= index + 1 %></div>
            <h3 class="text-lg font-semibold text-gray-100 mb-2"><%= t("workflow.steps.#{step}.title") %></h3>
            <p class="text-gray-400"><%= t("workflow.steps.#{step}.body") %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-16 border-t border-b border-gray-800">
      <div class="grid gap-10 md:grid-cols-2 items-center">
        <div data-aos="fade-right">
          <h2 class="h2 font-uncut-sans mb-4"><%= t("docs.title") %></h2>
          <p class="text-gray-400 mb-6"><%= t("docs.note") %></p>
          <ul class="space-y-3 text-gray-200 text-sm">
            <li>
              <%= link_to t("docs.manuals.en"), "/docs/sniper_advanced_panel/Manual_EN.md", class: "hover:text-blue-400 underline decoration-blue-400/70" %>
            </li>
            <li>
              <%= link_to t("docs.manuals.es"), "/docs/sniper_advanced_panel/Manual_ES.md", class: "hover:text-blue-400 underline decoration-blue-400/70" %>
            </li>
            <li>
              <%= link_to t("docs.manuals.pdf_es"), "/docs/sniper_advanced_panel/sniper_advanced_panel_es.pdf", class: "hover:text-blue-400 underline decoration-blue-400/70" %>
            </li>
            <li>
              <%= link_to t("docs.manuals.presentation_es"), "/docs/sniper_advanced_panel/sniper_advanced_panel_presentation_es.pdf", class: "hover:text-blue-400 underline decoration-blue-400/70" %>
            </li>
          </ul>
        </div>
        <div class="bg-gray-800/50 border border-gray-800 rounded-2xl p-6" data-aos="fade-left">
          <h3 class="text-lg font-semibold text-gray-100 mb-4"><%= t("pricing.title") %></h3>
          <p class="text-gray-400 mb-4"><%= t("pricing.subtitle") %></p>
          <ul class="space-y-2 text-gray-300 mb-6">
            <% t("pricing.bullets").each do |bullet| %>
              <li class="flex items-start gap-2">
                <span class="text-blue-400 mt-1">â€¢</span>
                <span><%= bullet %></span>
              </li>
            <% end %>
          </ul>
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <%= link_to t("pricing.cta"), user_signed_in? ? dashboard_path : new_user_registration_path, class: "btn text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 w-full sm:w-auto shadow-lg" %>
            <div class="text-sm text-gray-400"><%= t("pricing.price_callout") %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="bg-linear-to-t from-gray-800/70 to-gray-800 rounded-2xl border border-gray-800 p-8 md:p-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6" data-aos="zoom-out">
      <div>
        <div class="text-sm text-blue-300 uppercase mb-2"><%= t("referral.title") %></div>
        <p class="text-lg text-gray-100"><%= t("referral.body") %></p>
      </div>
      <div class="flex gap-3">
        <%= link_to t("nav.dashboard"), user_signed_in? ? dashboard_path : new_user_registration_path, class: "btn-sm text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 shadow-lg" %>
        <%= link_to t("nav.sign_up"), new_user_registration_path, class: "btn-sm text-gray-300 bg-gray-800 hover:bg-gray-700 shadow-lg" unless user_signed_in? %>
      </div>
    </div>
  </div>
</section>
