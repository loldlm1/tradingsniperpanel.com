<% content_for :title, t("app.name") %>

<!-- Hero -->
<section class="relative overflow-hidden">
  <div class="absolute bottom-0 left-0 right-0 bg-linear-to-t from-gray-800 to-gray-900 opacity-60 h-[10rem] pointer-events-none -z-10" aria-hidden="true"></div>
  <div class="absolute left-1/2 -translate-x-1/2 pointer-events-none -z-10" aria-hidden="true">
    <%= image_tag "neon/images/hero-illustration.svg", class: "max-w-none", width: 2143, height: 737, alt: "Hero Illustration" %>
  </div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
    <div class="pt-32 pb-12 md:pt-40 md:pb-20">
      <div class="max-w-xl mx-auto md:max-w-[640px] md:mx-0 text-center md:text-left">
        <div data-aos="zoom-out">
          <div class="relative text-sm text-gray-300 bg-gray-800 rounded-full inline-block px-4 py-1 mb-6 before:content-[''] before:absolute before:-z-10 before:inset-0 before:-m-0.5 before:bg-linear-to-t before:from-gray-800 before:to-gray-800 before:via-gray-600 before:rounded-full">
            <div class="text-gray-400"><%= t("hero.badge") %></div>
          </div>
        </div>
        <h1 class="h1 font-uncut-sans mb-6" data-aos="zoom-out" data-aos-delay="100"><%= t("hero.title") %></h1>
        <p class="text-xl text-gray-400 mb-10" data-aos="zoom-out" data-aos-delay="200"><%= t("hero.subtitle") %></p>
        <div class="max-w-xs mx-auto sm:max-w-none sm:flex sm:justify-center md:justify-start space-y-4 sm:space-y-0 sm:space-x-4" data-aos="zoom-out" data-aos-delay="300">
          <div>
            <%= link_to(user_signed_in? ? dashboard_path : new_user_registration_path, class: "btn text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 w-full shadow-lg group") do %>
              <%= t("hero.primary_cta") %>
              <span class="tracking-normal text-blue-200 group-hover:translate-x-0.5 transition-transform duration-150 ease-in-out ml-1">-&gt;</span>
            <% end %>
          </div>
          <div>
            <%= link_to t("hero.secondary_cta"), docs_path, class: "btn text-gray-300 bg-linear-to-t from-gray-800 to-gray-700 hover:to-gray-800 w-full shadow-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Press logos -->
<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-6 border-b border-gray-800">
      <div class="max-w-sm md:max-w-5xl mx-auto grid gap-2 grid-cols-4 md:grid-cols-5">
        <% logos = (1..8).to_a %>
        <% logos.each_with_index do |logo, idx| %>
          <div class="flex items-center justify-center py-2 col-span-2 md:col-auto" data-aos="zoom-out" data-aos-delay="<%= idx * 100 %>">
            <span class="text-gray-500 text-sm">Logo <%= logo %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Features -->
<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="text-center pb-12 md:pb-20">
        <h2 class="h2 font-uncut-sans" data-aos="zoom-out"><%= t("features.title") %></h2>
      </div>

      <div class="pb-16" data-aos="zoom-out">
        <%= image_tag "neon/images/features.svg", width: 1104, height: 512, alt: "Features" %>
      </div>

      <div class="max-w-sm mx-auto grid gap-8 md:grid-cols-3 lg:gap-16 items-start md:max-w-none">
        <% feature_items = [:risk, :scope, :grid] %>
        <% feature_items.each_with_index do |item, index| %>
          <div class="flex flex-col items-center" data-aos="zoom-out" data-aos-delay="<%= index * 200 %>">
            <div class="mb-4 w-14 h-14 rounded-full bg-linear-to-t from-blue-600/60 to-pink-400/60 flex items-center justify-center text-white font-semibold">
              0<%= index + 1 %>
            </div>
            <h4 class="h4 text-gray-200 text-center mb-2"><%= t("features.items.#{item}.title") %></h4>
            <p class="text-lg text-gray-400 text-center"><%= t("features.items.#{item}.body") %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Features #2 -->
<section class="relative">
  <div class="absolute inset-0 pointer-events-none mb-16" aria-hidden="true">
    <div class="w-full h-40 bg-gradient-to-b from-gray-900"></div>
  </div>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="grid gap-8 lg:grid-cols-12 lg:gap-16 items-center">
        <div class="max-w-xl lg:max-w-none lg:col-span-7" data-aos="zoom-out">
          <%= image_tag "neon/images/features-illustration.svg", class: "max-w-none mx-auto", width: 608, height: 305, alt: "Illustration" %>
        </div>
        <div class="lg:col-span-5" data-aos="zoom-out" data-aos-delay="200">
          <h3 class="h3 text-gray-100 mb-4">Use sensitive data without sacrificing privacy</h3>
          <p class="text-lg text-gray-400 mb-6">We emphasize building new features with real users and real data, generating insights with constant validation.</p>
          <ul class="space-y-3 text-gray-300 text-sm">
            <li class="flex items-start">
              <span class="text-blue-400 mr-2">•</span>
              <span>Analytics SDK with pre-built dashboards</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-400 mr-2">•</span>
              <span>Feature flagging with guardrails</span>
            </li>
            <li class="flex items-start">
              <span class="text-blue-400 mr-2">•</span>
              <span>Secure, self-serve permissions</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Metrics -->
<section class="relative">
  <div class="absolute inset-0 bg-gray-900 pointer-events-none -z-10" aria-hidden="true"></div>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20">
      <div class="max-w-3xl text-center mx-auto mb-12">
        <h2 class="h2 font-uncut-sans mb-4">Find a plan that's right for you</h2>
        <p class="text-lg text-gray-400">Scale from testing to production with predictable pricing.</p>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        <% (1..3).each do |n| %>
          <div class="bg-gray-800 rounded-2xl border border-gray-800 p-6" data-aos="fade" data-aos-delay="<%= n * 100 %>">
            <div class="text-sm text-gray-400 mb-2">PLAN 0<%= n %></div>
            <h3 class="text-xl font-semibold text-gray-100 mb-2">Plan <%= n %></h3>
            <p class="text-gray-400">Everything you need to launch and scale quickly.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Testimonials -->
<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20 border-t border-gray-800">
      <div class="max-w-3xl text-center mx-auto mb-12">
        <h2 class="h2 font-uncut-sans">Sound too good? Hear what our customers have to say</h2>
      </div>
      <div class="max-w-sm mx-auto sm:max-w-none grid gap-12 sm:grid-cols-2 md:grid-cols-3 sm:gap-x-6 sm:gap-y-8 items-start" data-aos-id-testimonials>
        <% (1..6).each do |n| %>
          <article class="h-full flex flex-col bg-gray-800 p-6" data-aos="fade" data-aos-anchor="[data-aos-id-testimonials]" data-aos-delay="<%= n * 100 %>">
            <header class="mb-4">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <%= image_tag "neon/images/testimonial-0#{n}.jpg", class: "rounded-full shrink-0", width: 48, height: 48, alt: "Testimonial #{n}" %>
                  <div>
                    <div class="font-semibold text-gray-100">Customer <%= n %></div>
                    <div class="text-sm text-gray-400">Founder</div>
                  </div>
                </div>
              </div>
            </header>
            <p class="text-gray-300 flex-1">“We shipped faster and iterated safely thanks to the launch controls and visibility.”</p>
          </article>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Resources -->
<section>
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="py-12 md:py-20 border-t border-gray-800">
      <div class="max-w-3xl text-center mx-auto mb-12">
        <h2 class="h2 font-uncut-sans">Resources to help you get the most out of Neon</h2>
      </div>
      <div class="grid gap-6 md:grid-cols-3">
        <% resources = [
          { title: "Documentation", body: "Read how to integrate and deploy quickly.", href: docs_path },
          { title: "Pricing", body: "Predictable plans with transparent billing.", href: pricing_path },
          { title: "Support", body: "We’re here to help you launch safely.", href: user_signed_in? ? dashboard_support_path : new_user_registration_path }
        ] %>
        <% resources.each_with_index do |resource, idx| %>
          <div class="bg-gray-800 rounded-2xl border border-gray-800 p-6" data-aos="fade" data-aos-delay="<%= idx * 150 %>">
            <div class="text-sm text-gray-400 mb-2">0<%= idx + 1 %></div>
            <h3 class="text-lg font-semibold text-gray-100 mb-2"><%= resource[:title] %></h3>
            <p class="text-gray-400 mb-3"><%= resource[:body] %></p>
            <%= link_to "Learn more", resource[:href], class: "text-blue-400 hover:text-blue-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="py-12 md:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="bg-linear-to-t from-gray-800/70 to-gray-800 rounded-2xl border border-gray-800 p-8 md:p-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6" data-aos="zoom-out">
      <div>
        <div class="text-sm text-blue-300 uppercase mb-2"><%= t("referral.title") %></div>
        <p class="text-lg text-gray-100"><%= t("referral.body") %></p>
      </div>
      <div class="flex gap-3">
        <%= link_to t("nav.dashboard"), user_signed_in? ? dashboard_path : new_user_registration_path, class: "btn-sm text-white bg-linear-to-t from-blue-600 to-blue-400 hover:to-blue-500 shadow-lg" %>
        <%= link_to t("nav.sign_up"), new_user_registration_path, class: "btn-sm text-gray-300 bg-gray-800 hover:bg-gray-700 shadow-lg" unless user_signed_in? %>
      </div>
    </div>
  </div>
</section>
