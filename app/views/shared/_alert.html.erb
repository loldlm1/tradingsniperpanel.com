<% if flash.any? %>
  <div class="space-y-3 mb-6">
    <% flash.each do |type, message| %>
      <% message_text = Array(message).join(", ") %>
      <% next if message_text.blank? %>
      <% variant = case type.to_s
                  when "notice", "success"
                    { container: "bg-green-500 text-white", icon: "M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zM7 11.4L3.6 8 5 6.6l2 2 4-4L12.4 6 7 11.4z" }
                  when "alert", "error"
                    { container: "bg-red-500 text-white", icon: "M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm3.5 10.1l-1.4 1.4L8 9.4l-2.1 2.1-1.4-1.4L6.6 8 4.5 5.9l1.4-1.4L8 6.6l2.1-2.1 1.4 1.4L9.4 8l2.1 2.1z" }
                  when "warning"
                    { container: "bg-yellow-500 text-white", icon: "M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm0 12c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1zm1-3H7V4h2v5z" }
                  else
                    { container: "bg-violet-500 text-white", icon: "M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm1 12H7V7h2v5zM8 6c-.6 0-1-.4-1-1s.4-1 1-1 1 .4 1 1-.4 1-1 1z" }
                  end %>
      <div x-show="open" x-data="{ open: true }" role="alert">
        <div class="px-4 py-2 rounded-lg text-sm <%= variant[:container] %>">
          <div class="flex w-full justify-between items-start">
            <div class="flex">
              <svg class="shrink-0 fill-current opacity-80 mt-[3px] mr-3" width="16" height="16" viewBox="0 0 16 16" aria-hidden="true">
                <path d="<%= variant[:icon] %>" />
              </svg>
              <div class="font-medium"><%= message_text %></div>
            </div>
            <button class="opacity-60 hover:opacity-70 ml-3 mt-[3px]" @click="open = false" type="button">
              <span class="sr-only"><%= t("dashboard.alerts.dismiss") %></span>
              <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16" aria-hidden="true">
                <path d="M7.95 6.536l4.242-4.243a1 1 0 111.415 1.414L9.364 7.95l4.243 4.242a1 1 0 11-1.415 1.415L7.95 9.364l-4.243 4.243a1 1 0 01-1.414-1.415L6.536 7.95 2.293 3.707a1 1 0 011.414-1.414L7.95 6.536z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
